{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb/base", "airbnb-typescript/base", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint"],
  "globals": {
    "NodeJS": true,
    "Logger": true,
    "Config": true
  },
  "rules": {
    // "no-unused-vars": "off",
    // "@typescript-eslint/no-unused-vars": "warn",
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": "off"
  }
}
